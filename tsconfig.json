{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "allowJs": false,
        "skipLibCheck": false,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "composite": true,
        "module": "esnext",
        "moduleResolution": "node"
    },
    "include": ["src/**/*"]
}
